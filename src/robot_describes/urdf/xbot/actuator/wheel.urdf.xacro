<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
  <xacro:include filename="$(find robot_describes)/urdf/xbot/common_inertia.xacro"/>
  <xacro:macro name="wheel_xacro" params="wheel_name xyz">
    <!-- 驱动轮 -->
    <link name="${wheel_name}_link">
      <!-- 部件的外观描述 -->
      <visual>
        <!-- 绕 x 轴旋转 90 度 -->
        <origin xyz="0.0 0.0 0.0" rpy="1.57079 0.0 0.0"/>
        <geometry>
          <cylinder radius="0.032" length="0.04" />
        </geometry>
        <material name="yellow">
          <color rgba="1.0 1.0 0.0 0.8" />
        </material>
      </visual>
      <collision>
        <!-- 绕 x 轴旋转 90 度 -->
        <origin xyz="0.0 0.0 0.0" rpy="1.57079 0.0 0.0"/>
        <geometry>
          <cylinder radius="0.032" length="0.04" />
        </geometry>
        <material name="yellow">
          <color rgba="1.0 1.0 0.0 0.8" />
        </material>
      </collision>
      <xacro:cylinder_inertia m="0.05" r="0.032" h="0.04"/>
    </link>
    <!-- 机器人关节，用来组合机器人部件 可转动类型-->
    <joint name="${wheel_name}_joint" type="continuous">
      <!-- 父部件 -->
      <parent link="base_link"/>
      <!-- 子部件固定到父部件上 -->
      <child link="${wheel_name}_link"/>
      <!-- 固定的位置 -->
      <origin xyz="${xyz}" rpy="0.0 0.0 0.0"/>
      <!-- 绕 Y 轴旋转 -->
      <axis xyz="0 1 0"/>
    </joint>

    <gazebo reference="${wheel_name}_link">
      <!-- 切向摩擦系数 -->
      <mu1 value="20.0"/>
      <!-- 法向摩擦系数 -->
      <mu2 value="20.0"/>
      <!-- 刚度系数 -->
      <kp value="1000000000.0"/>
      <!-- 阻尼系数 -->
      <kd value="1.0"/>
    </gazebo>
  </xacro:macro>
</robot>
