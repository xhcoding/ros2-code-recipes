<?xml version="1.0"?>
<!-- 机器人名称 -->
<robot name="first_robot">
  <!-- 机器人身体部分 -->
  <link name="base_link">
    <!-- 部件的外观描述 -->
    <visual>
      <!-- 沿着自己几何中心的偏移和旋转 -->
      <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
      <!-- 几何形状 -->
      <geometry>
        <!-- 圆柱体 -->
        <cylinder radius="0.10" length="0.12"/>
      </geometry>
      <!-- 材质和颜色 -->
      <material name="white">
        <color rgba="1.0 1.0 1.0 0.5" />
      </material>
    </visual>
  </link>

  <!-- 机器人的 IMU ，惯性测量单元 -->
  <link name="imu_link">
    <!-- 部件的外观描述 -->
    <visual>
      <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
      <geometry>
        <!-- 正方体 -->
        <box size="0.02 0.02 0.02" />
      </geometry>
      <!-- 材质和颜色 -->
      <material name="black">
        <color rgba="0.0 0.0 0.0 0.5" />
      </material>
    </visual>
  </link>

  <!-- 机器人关节，用来组合机器人部件 -->
  <joint name="imu_joint" type="fixed">
    <!-- 父部件 -->
    <parent link="base_link"/>
    <!-- 子部件固定到父部件上 -->
    <child link="imu_link"/>
    <!-- 固定的位置 -->
    <origin xyz="0.0 0.0 0.03" rpy="0.0 0.0 0.0"/>
  </joint>
  
</robot>
  
